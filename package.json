{
  "name": "hardhat-project",
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^3.0.0",
    "hardhat": "^2.15.0",
    "prettier": "^2.8.8",
    "prettier-plugin-solidity": "^1.1.3"
  },
  "scripts": {
    "lint:check": "npx prettier --check 'contracts/**/*.sol' 'test/**/*.sol' 'test/**/*.ts'",
    "lint:format": "npx prettier --write 'contracts/**/*.sol' 'test/**/*.sol' 'test/**/*.ts'",
    "test:hardhat": "npx hardhat clean && npx hardhat compile && npx hardhat test"
  }
}
